{
	"name": "discord-status-webhook",
	"version": "1.0.0",
	"description": "",
	"contributors": [
		"Souji <timoqueezle@gmail.com>"
	],
	"license": "Apache-2.0",
	"private": true,
	"scripts": {
		"build": "tsc",
		"start": "node build/index.js",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"prettier": "prettier --write **/*.{ts,js,json,yml,yaml}"
	},
	"keywords": [
		"discord",
		"api",
		"webhook",
		"discordapp"
	],
	"dependencies": {
		"@keyv/sqlite": "^3.5.2",
		"discord.js": "13.8.0",
		"dotenv": "^16.0.1",
		"keyv": "^4.3.1",
		"luxon": "^2.4.0",
		"node-fetch": "^2.6.7"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-angular": "^17.0.0",
		"@types/keyv": "^3.1.4",
		"@types/luxon": "^2.3.2",
		"@types/node": "^18.0.0",
		"@types/node-fetch": "^2.6.2",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"eslint": "^8.18.0",
		"eslint-config-marine": "^9.4.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.2",
		"prettier": "^2.7.1",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"eslintConfig": {
		"extends": "marine/prettier/node",
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"rules": {
			"@typescript-eslint/naming-convention": 0
		}
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "all",
		"endOfLine": "lf"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,yml,yaml}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			]
		}
	}
}
